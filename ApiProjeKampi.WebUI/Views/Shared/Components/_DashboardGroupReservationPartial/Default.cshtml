@model List<ApiProjeKampi.WebUI.Dtos.GroupReservationDtos.ResultGroupReservationDto>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
        <h4 class="fw-bold mb-0">Grup Rezervasyonları</h4>
        <div class="position-relative">
            <input type="text" class="form-control rounded-pill ps-4" placeholder="Rezervasyon ara...">
            <i class="fas fa-search position-absolute top-50 end-0 translate-middle-y me-3 text-muted"></i>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th></th>
                        <th>Grup Başlığı</th>
                        <th>Yetkili Kişi</th>
                        <th>Durum</th>
                        <th>Kişi</th>
                        <th>Son İşlem</th>
                        <th>Rezervasyon</th>
                        <th>Öncelik</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string statusClass = item.ReservationStatus switch
                        {
                            "Onaylandı" => "badge-success",
                            "Bekleniyor" => "badge-warning",
                            "İptal Edildi" => "badge-danger",
                            _ => "badge-secondary"
                        };

                        string statusIcon = item.ReservationStatus switch
                        {
                            "Onaylandı" => "fas fa-check-circle",
                            "Bekleniyor" => "fas fa-hourglass-half",
                            "İptal Edildi" => "fas fa-times-circle",
                            _ => "fas fa-info-circle"
                        };

                        string priorityIcon = item.Priority switch
                        {
                            "Yüksek" => "fas fa-exclamation-circle text-danger",
                            "Orta" => "fas fa-chevron-up text-warning",
                            "Düşük" => "fas fa-minus-circle text-success",
                            _ => "fas fa-circle"
                        };

                        <tr class="table-row-modern">
                            <td style="width: 35px;">
                                <input type="checkbox" />
                            </td>
                            <td class="fw-semibold">
                                <i class="fas fa-users text-primary me-2"></i>
                                @item.GroupTitle
                            </td>
                            <td>
                                <i class="fas fa-user text-secondary me-2"></i>
                                @item.ResponsibleCustomerName
                            </td>
                            <td>
                                <span class="badge @statusClass px-3 py-2 rounded-pill">
                                    <i class="@statusIcon me-1"></i>
                                    @item.ReservationStatus
                                </span>
                            </td>
                            <td>
                                <i class="fas fa-user-friends text-info me-2"></i>
                                @item.PersonCount
                            </td>
                            <td>
                                <i class="fas fa-calendar-alt text-warning me-2"></i>
                                @item.LastProcessDate.ToString("dd-MMM-yyyy")
                            </td>
                            <td>
                                <i class="fas fa-calendar-check text-success me-2"></i>
                                @item.ReservationDate.ToString("dd-MMM-yyyy")
                            </td>
                            <td>
                                <span class="badge bg-light text-dark px-3 py-2 rounded-pill">
                                    <i class="@priorityIcon me-1"></i>
                                    @item.Priority
                                </span>
                            </td>
                            <td>
                                <button type="button"
                                        class="btn btn-outline-primary btn-sm rounded-pill px-3 detail-btn"
                                        data-id="@item.GroupReservationId"
                                        data-title="@item.GroupTitle"
                                        data-responsible="@item.ResponsibleCustomerName"
                                        data-email="@item.Email"
                                        data-status="@item.ReservationStatus"
                                        data-person-count="@item.PersonCount"
                                        data-reservation-date="@item.ReservationDate.ToString("dd MMM yyyy")"
                                        data-last-process="@item.LastProcessDate.ToString("dd MMM yyyy")"
                                        data-priority="@item.Priority"
                                        data-details="@item.Details"
                                        data-status-class="@statusClass"
                                        data-status-icon="@statusIcon"
                                        data-priority-icon="@priorityIcon">
                                    <i class="fas fa-info-circle me-1"></i> Detaylar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modern Popup Modal -->
<div class="modal fade" id="reservationDetailModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 600px;">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">

            <div class="modal-header bg-gradient-primary text-white py-3 px-4">
                <div class="d-flex align-items-center">
                    <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
                        <i class="fas fa-info fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold letter-spacing-1">REZERVASYON DETAYI</h6>
                        <small class="opacity-75" style="font-size: 0.8rem;">Tüm bilgiler aşağıdadır</small>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <div class="modal-body p-4 bg-light bg-opacity-25">

                <div class="text-center mb-4">
                    <h5 class="fw-bold text-dark mb-1" id="modal-title">Grup Başlığı Yükleniyor...</h5>
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill fw-normal mt-2">
                        <i class="fas fa-user-tie me-1"></i> <span id="modal-responsible">Yetkili Adı</span>
                    </span>
                </div>

                <div class="row g-3">
                    <div class="col-6">
                        <div class="bg-white p-3 rounded-3 shadow-sm h-100 border border-light">
                            <label class="d-block text-muted text-uppercase fw-bold mb-2" style="font-size: 0.7rem;">Rezervasyon</label>

                            <div class="mb-3">
                                <small class="text-muted d-block">Tarih</small>
                                <span class="fw-semibold text-dark" id="modal-reservation-date">-</span>
                            </div>
                            <div>
                                <small class="text-muted d-block">Kişi Sayısı</small>
                                <span class="fw-semibold text-dark" id="modal-person-count">-</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="bg-white p-3 rounded-3 shadow-sm h-100 border border-light">
                            <label class="d-block text-muted text-uppercase fw-bold mb-2" style="font-size: 0.7rem;">Durum Bilgisi</label>

                            <div class="mb-2" id="modal-status">
                            </div>
                            <div id="modal-priority">
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="bg-white px-3 py-2 rounded-3 shadow-sm border border-light d-flex align-items-center">
                            <div class="bg-light p-2 rounded-circle me-3 text-primary">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block" style="font-size: 0.75rem;">E-Posta Adresi</small>
                                <span class="fw-semibold text-dark" id="modal-email" style="font-size: 0.9rem;">-</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="bg-white p-3 rounded-3 shadow-sm border border-light">
                            <label class="d-block text-muted text-uppercase fw-bold mb-2" style="font-size: 0.7rem;">
                                <i class="fas fa-align-left me-1"></i> Notlar / Açıklama
                            </label>
                            <p class="mb-0 text-secondary" id="modal-details" style="font-size: 0.9rem; line-height: 1.5;">
                                Açıklama bulunamadı.
                            </p>
                        </div>
                    </div>

                    <div class="col-12 text-end">
                        <small class="text-muted fst-italic" style="font-size: 0.75rem;">
                            Son İşlem: <span id="modal-last-process">-</span>
                        </small>
                    </div>
                </div>
            </div>

            <div class="modal-footer border-0 bg-light py-2 px-3">
                <button type="button" class="btn btn-secondary btn-sm rounded-pill px-4" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
<style>
    .table-row-modern:hover {
        background-color: #f8f9fa !important;
        transition: 0.2s ease-in-out;
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .detail-card {
        transition: all 0.3s ease;
    }

        .detail-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .detail-item label {
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .modal-content {
        overflow: hidden;
        background: white !important;
    }

    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.5) !important;
    }

    .modal {
        z-index: 1050 !important;
    }

    .modal-backdrop {
        z-index: 1040 !important;
    }

    .modal-close-btn {
        z-index: 1060 !important;
        position: relative !important;
        cursor: pointer !important;
        pointer-events: auto !important;
    }

    .modal-action-btn {
        z-index: 1060 !important;
        position: relative !important;
        cursor: pointer !important;
        pointer-events: auto !important;
    }

    .btn-close:focus {
        box-shadow: none !important;
        opacity: 1 !important;
    }

    .btn-close:hover {
        opacity: 0.8 !important;
    }

    .badge-success {
        background-color: #28a745 !important;
        color: white;
    }

    .badge-warning {
        background-color: #ffc107 !important;
        color: #000;
    }

    .badge-danger {
        background-color: #dc3545 !important;
        color: white;
    }

    .text-justify {
        text-align: justify;
        line-height: 1.6;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Güvenli Modal Açma Fonksiyonu
        const modalElement = document.getElementById('reservationDetailModal');
        let bsModal = null; // Modal örneğini tutmak için

        document.querySelectorAll('.detail-btn').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();

                // Verileri doldur
                document.getElementById('modal-title').textContent = this.getAttribute('data-title');
                document.getElementById('modal-responsible').textContent = this.getAttribute('data-responsible');
                document.getElementById('modal-email').textContent = this.getAttribute('data-email') || 'Belirtilmemiş';
                document.getElementById('modal-person-count').textContent = this.getAttribute('data-person-count') + ' Kişi';
                document.getElementById('modal-reservation-date').textContent = this.getAttribute('data-reservation-date');
                document.getElementById('modal-last-process').textContent = this.getAttribute('data-last-process');

                const detailsText = this.getAttribute('data-details');
                document.getElementById('modal-details').textContent = (detailsText && detailsText.trim() !== "") ? detailsText : "Bu rezervasyon için ek bir açıklama girilmemiştir.";

                // Durum Badge
                const status = this.getAttribute('data-status');
                const statusClass = this.getAttribute('data-status-class');
                const statusIcon = this.getAttribute('data-status-icon');

                document.getElementById('modal-status').innerHTML = `
                    <div class="d-flex align-items-center">
                        <span class="badge ${statusClass} rounded-pill w-100 py-2">
                            <i class="${statusIcon} me-1"></i> ${status}
                        </span>
                    </div>
                `;

                // Öncelik Badge
                const priority = this.getAttribute('data-priority');
                const priorityIcon = this.getAttribute('data-priority-icon');

                document.getElementById('modal-priority').innerHTML = `
                    <div class="d-flex align-items-center mt-2">
                        <span class="badge bg-light text-dark border w-100 py-2">
                            <i class="${priorityIcon} me-1"></i> ${priority} Öncelik
                        </span>
                    </div>
                `;

                // Modalı aç
                if (!bsModal) {
                    bsModal = new bootstrap.Modal(modalElement, { backdrop: 'static' });
                }
                bsModal.show();
            });
        });

        // Kapatma butonlarını manuel dinle (Garanti olması için)
        document.querySelectorAll('[data-bs-dismiss="modal"]').forEach(btn => {
            btn.addEventListener('click', () => {
                if(bsModal) bsModal.hide();
            });
        });
    });
</script>