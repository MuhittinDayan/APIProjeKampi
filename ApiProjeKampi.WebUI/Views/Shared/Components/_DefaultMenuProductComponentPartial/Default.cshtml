@model List<ApiProjeKampi.WebUI.Dtos.ProductDtos.ResultProductDto>

<div class="tab-content" data-aos="fade-up" data-aos-delay="200">

    <!-- TÜM MENÜ -->
    <div class="tab-pane fade active show" id="category-all">
        <div class="row gy-5">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 menu-item">
                    <img src="@item.ImageUrl" class="menu-img img-fluid"
                         style="height:250px; width:100%;">
                    <h4>@item.ProductName</h4>
                    <p class="ingredients">@item.ProductDescription</p>
                    <p class="price">@item.Price ₺</p>
                </div>
            }
        </div>
    </div>

    <!-- KATEGORİYE GÖRE -->
    @foreach (var categoryId in Model.Select(x => x.CategoryId).Distinct())
    {
        <div class="tab-pane fade" id="category-@categoryId">
            <div class="row gy-5">
                @foreach (var item in Model.Where(x => x.CategoryId == categoryId))
                {
                    <div class="col-lg-4 menu-item">
                        <img src="@item.ImageUrl" class="menu-img img-fluid"
                             style="height:250px; width:100%;">
                        <h4>@item.ProductName</h4>
                        <p class="ingredients">@item.ProductDescription</p>
                        <p class="price">@item.Price ₺</p>
                    </div>
                }
            </div>
        </div>
    }
</div>
