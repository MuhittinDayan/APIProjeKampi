@model ApiProjeKampi.WebUI.Dtos.MessageDtos.GetMessageByIdDto
@{
    ViewData["Title"] = "AnswerMessageWithGeminiAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Gemini ile Otomatik Yanıt Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="MessageId" />
                            <label>Müşteri Mesajı</label>
                            <textarea class="form-control" asp-for="MessageDetails" rows="12" style="height: 200px !important" readonly></textarea>
                            <br />

                            <label>GeminiAI Otomatik Cevabı</label>
                            <textarea class="form-control" name="GeneratedAnswer" style="height:200px !important; white-space: pre-wrap;">@Html.Raw(ViewBag.rawAiAnswer)</textarea>
                            <br />

                            <button class="btn btn-primary">Cevabı Mail Olarak Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


